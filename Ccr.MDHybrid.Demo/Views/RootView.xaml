		<!--<ContentControl x:Name="NavigationView"/>-->
		<ListView>
			<ListView.ItemsSource>
				<Binding Source="{StaticResource MaterialDesignPalette}" Path="Swatches"/>
			</ListView.ItemsSource>
			<ListView.ItemTemplate>
				<DataTemplate DataType="Swatch">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition />
						</Grid.RowDefinitions>
						<Label Content="{Binding SwatchClassifier}"
									 Background="{Binding ExemplarHue}"
									 Foreground="White"/>
						<ListView ItemsSource="{Binding Materials}"
											Grid.Row="1">
							<ListView.ItemTemplate>
								<DataTemplate DataType="MaterialBrush">
									<Border BorderThickness="0"
													BorderBrush="Transparent">
										<Border.Background>
											<SolidColorBrush Color="{Binding Color}"/>
										</Border.Background>
										<Label Content="{Binding Identity.MaterialIndex}"></Label>
									</Border>
								</DataTemplate>
							</ListView.ItemTemplate>
							<ListView.ItemsPanel>
								<ItemsPanelTemplate>
									<UniformGrid Columns="1"/>
								</ItemsPanelTemplate>
							</ListView.ItemsPanel>
						</ListView>
					</Grid>
				</DataTemplate>
			</ListView.ItemTemplate>
			<ListView.ItemsPanel>
				<ItemsPanelTemplate>
					<UniformGrid Rows="1"/>
				</ItemsPanelTemplate>
			</ListView.ItemsPanel>
		</ListView>
	</Grid>

